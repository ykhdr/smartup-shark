<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="720.0" prefWidth="1024.0" styleClass="bg" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.nsu.fit.ykhdr.smartupshark.controller.ScoreboardController">
    <stylesheets>
        <URL value="@../stylesheets/button.css"/>
        <URL value="@../stylesheets/bg.css"/>
    </stylesheets>
    <VBox layoutX="162.0" layoutY="110.0" prefHeight="500.0" prefWidth="700.0" AnchorPane.bottomAnchor="110.0"
          AnchorPane.leftAnchor="162.0" AnchorPane.rightAnchor="162.0" AnchorPane.topAnchor="110.0">
        <TableView fx:id="scoreboard" prefHeight="500.0" prefWidth="692.0"
                   stylesheets="@../stylesheets/scoreboard.css">
            <columns>
                <TableColumn fx:id="dateColumn" minWidth="0.0" prefWidth="350.0" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="scoreColumn" minWidth="0.0" prefWidth="350.0" text="Score">
                    <cellValueFactory>
                        <PropertyValueFactory property="score"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

        </TableView>
    </VBox>

    <Button alignment="CENTER" contentDisplay="RIGHT" layoutX="899.0" layoutY="14.0" minHeight="-Infinity"
            minWidth="-Infinity" mnemonicParsing="false" onAction="#onActionBtnBack" prefHeight="75.0" prefWidth="111.0"
            stylesheets="@../stylesheets/game.css" text="Back" AnchorPane.rightAnchor="14.0"
            AnchorPane.topAnchor="14.0"/>
</AnchorPane>
